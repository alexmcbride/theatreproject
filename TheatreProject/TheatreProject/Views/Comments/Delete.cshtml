@model TheatreProject.ViewModels.CommentDeleteViewModel

@{
    ViewBag.Title = "Delete Comment";
}

@section breadcrumb {
    @Html.ActionLink("Home", "index", "home")
    &raquo; @Html.ActionLink("Blog", "index", "posts")
    &raquo; @Html.ActionLink(Model.CategoryName, "category", "posts", new { id = Model.CategoryId }, null)
    &raquo; @Html.ActionLink(Model.PostTitle, "details", "posts", new { id = Model.PostId }, null)
    &raquo; Edit Comment
}

<h2>@ViewBag.Title</h2>

<h3>Are you sure you want to delete this comment?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.PostTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PostTitle)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Posted)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Posted)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("No, thanks!", "details", "posts", new { id = Model.PostId }, null)
        </div>
    }
</div>
