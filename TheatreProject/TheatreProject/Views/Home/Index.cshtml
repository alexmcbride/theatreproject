@model IEnumerable<TheatreProject.Models.Category>

@{
    ViewBag.Title = "Welcome";
}

@section head {
    @* We give the index page slightly different styling. *@
    <style>
        .intro-header .site-heading, .intro-header .post-heading, .intro-header .page-heading {
            padding: 150px 0;
        }

        .intro-header .site-heading h1, .intro-header .page-heading h1 {
            font-size: 60px;
        }

        .intro-header .site-heading .subheading, .intro-header .page-heading .subheading {
            font-size: 22px;
        }
    </style>
}

<div class="row">
    <div class="col-md-6">
        <h2>Welcome All</h2>
        <div>
            Welcome to the blog for the Local Theatre Company. Here you'll find update-to-date information about our theatre and activities.
            There are announcements, movie and performance reviews, as well as a whole host of other things to keep you occupied. Please choose a
            category from the list to the right to get started. Make sure to register and leave a comment to let us know what you think!
        </div>
    </div>
    <div class="col-md-6 text-right">
        <h2>Browse Categories</h2>

        @if (Model.Any())
        {
            <div class="list-group">
                @foreach (var category in Model)
                {
                    @Html.ActionLink(category.Name, "category", new { id = category.CategoryId }, new { @class = "list-group-item list-group-item-action" })
                }
            </div>
        }
        else
        {
            <p><em>There are no categories to display</em></p>
        }
    </div>
</div>