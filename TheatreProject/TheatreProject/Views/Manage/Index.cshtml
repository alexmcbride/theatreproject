@model TheatreProject.ViewModels.IndexViewModel

@{
    ViewBag.Title = "Manage";
}

@section breadcrumb {
    @Html.ActionLink("Home", "index", "home") &raquo; Manage Profile
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Change your account settings</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Current Role:</dt>
        <dd>@Model.CurrentRole</dd>
        <dt>Password:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Change your password", "changepassword")
            }
            else
            {
                @Html.ActionLink("Create", "setpassword")
            }
            ]
        </dd>
        <dt>Email:</dt>
        <dd>
            [
            @Html.ActionLink("Change your email", "changeemail")
            ]
        </dd>
        @if (User.IsInRole("Admin") || User.IsInRole("Staff"))
        {
            <dt>Profile:</dt>
            <dd>
                [
                @Html.ActionLink("Edit your profile", "editprofile", "manage")
                ]
            </dd>
        }
    </dl>
</div>
