@model TheatreProject.Helpers.Paginator<TheatreProject.Models.Post>

@{
    ViewBag.Title = @ViewBag.Category;
}

@section breadcrumb {
    @Html.ActionLink("Home", "index", "home") &raquo; @Html.ActionLink("Blog", "index") &raquo; @ViewBag.Title
}

<div class="row">
    <hr />

    @if (Model.Items.Any())
    {
        @Html.DisplayFor(m => m.Items)

        if (Model.HasPreviousPage)
        {
            @:&laquo;  @Html.ActionLink("Previous", "category", new { page = Model.PreviousPageNumber })
        }

        if (Model.HasPreviousPage && Model.HasNextPage)
        {
            @:|
        }

        if (Model.HasNextPage)
        {
            @Html.ActionLink("Next", "category", new { page = Model.NextPageNumber }) @:&raquo;
        }
    }
    else
    {
        <p><em>There are no posts in the @ViewBag.Category.ToLower() category.</em></p>
    }
</div>