@model TheatreProject.Models.Post

@{
    ViewBag.Title = "Delete Post";
}

@section breadcrumb {
    @Html.ActionLink("Home", "index", "home") &raquo;
    @Html.ActionLink("Blog", "index") &raquo;
    @Html.ActionLink(Model.Category.Name, "category", new { id = Model.CategoryId }) &raquo;
    @Model.Title
}

<div class="row">
    <hr>

    <h2>@ViewBag.Title</h2>

    <h3>Are you sure you want to delete this post?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Category.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Category.Name)
            </dd>

            <dt>
                Username
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Staff.UserName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Title)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Published)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Published)
            </dd>
        </dl>

        <p><em>Note - all comments associated with this post will be deleted as well!</em></p>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("No, thanks!", "Index")
            </div>
        }
    </div>
</div>