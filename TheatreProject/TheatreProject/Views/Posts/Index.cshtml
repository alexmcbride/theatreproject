@model TheatreProject.Helpers.Paginator<TheatreProject.Models.Post>
@{
    ViewBag.Title = "Blog";
}

@section breadcrumb {
    @Html.ActionLink("Home", "index", "home") &raquo; @ViewBag.Title
}

<div class="row">
    <hr>

    @if (Model.Items.Any())
    {
        @Html.DisplayFor(m => m.Items)

        @Html.DisplayFor(m => m, "Paginator")
    }
    else
    {
        <p><em>Sorry - there are no posts to display.</em></p>
    }
</div>