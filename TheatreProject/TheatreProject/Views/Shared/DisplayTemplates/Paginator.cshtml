@model TheatreProject.Helpers.IPaginator

@if (Model.HasPreviousPage)
{
    @:&laquo;  @Html.ActionLink("Previous", "index", new { page = Model.PreviousPageNumber })
}

@if (Model.HasPreviousPage && Model.HasNextPage)
{
    @:|
}

@if (Model.HasNextPage)
{
    @Html.ActionLink("Next", "index", new { page = Model.NextPageNumber }) @:&raquo;
}

